{
    "name": "MIToolBox",
    "type": "cpp",
    "link":
    {
        "url": "http://www.cs.man.ac.uk/~pococka4/software/MIToolbox.zip"
    },
    "build":
    {
        "configure": { "tool": "Cmake" },
        "build": { "tool": "make" },
        "install": { "tool": "make" }
    },
    "cmake":
    {
        "definitions":
