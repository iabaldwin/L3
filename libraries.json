[

{
    "name": "gsl",
    "type": "cpp",
    "provider": "native"
},

{
    "name": "Eigen",
    "type": "cpp",
    "link":
    {
        "url": "https://bitbucket.org/eigen/eigen/",
        "commit": "fabd880592ac"
    },
    "build":
    {
        "configure":{ "tool": "Cmake" },
        "build":{ "tool": "make" },
        "install":{ "tool": "make" }
    },
    "env": 
    {
        "EIGEN3_INCLUDE_DIR": "${build.source_directory}",
        "EIGEN_ROOT": "${build.source_directory}"
    },
    "cmake":
    {
        "definitions":
        {
            "EIGEN3_INCLUDE_DIR": "${build.source_directory}"
        }
    }
},

{
    "name": "Boost",
    "type": "cpp",
    "link":
    {
        "url": "http://downloads.sourceforge.net/project/boost/boost/1.55.0/boost_1_55_0.tar.gz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fboost%2Ffiles%2Fboost%2F1.55.0%2F&ts=1396138374&use_mirror=softlayer-dal"
    },
    "build":
    {
        "configure": { "tool": "Bootstrap" },
        "build": { "tool": "Bjam", "args": ["--without-log"] }
    },
    "env":
    {
        "BOOST_ROOT": "${build.configure.build_directory}",
        "DYLD_LIBRARY_PATH": "${build.configure.build_directory}/stage/lib"
    }
},

