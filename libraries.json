#version 0.1
[

{
  "name": "gsl",
  "type": "cpp",
  "provider": "native"
},

{
  "name": "libconfig",
  "type": "cpp",
  "link":
  {
    "url": "http://www.hyperrealm.com/libconfig/libconfig-1.5.tar.gz"
  },
  "build":
  {
    "configure": { "tool": "Autotools" } ,
    "build": { "tool": "Make" } ,
    "install": { "tool": "Make" }
  },
  "env":
  {
    "CMAKE_LINK_DIRECTORIES": "${build.configure.install_directory}/lib",
    "CMAKE_INCLUDE_DIRECTORIES": "${build.configure.install_directory}/include"
  }
},

{
  "name": "Eigen",
  "type": "cpp",
  "link":
  {
    "url": "https://bitbucket.org/eigen/eigen",
    "type": "hg",
    "commit": "fabd880592ac"
  },
  "build":
  {
    "configure":{ "tool": "Cmake" },
    "build":{ "tool": "make" },
    "install":{ "tool": "make" }
  },
  "env":
  {
    "EIGEN3_INCLUDE_DIR": "${source_directory}",
    "EIGEN_ROOT": "${source_directory}",
    "Eigen3_DIR": "${source_directory}"
  },
  "cmake":
  {
    "definitions":
    {
      "EIGEN3_INCLUDE_DIR": "${source_directory}"
    }
  }
},

{
  "name": "Bayes++",
  "type": "cpp",
  "link":
  {
    "url": "http://downloads.sourceforge.net/project/bayesclasses/Bayes%2B%2B/2014.5-1/bf-C%2B%2Bsource-2014.5-1.zip"
  },
  "build":
  {
    "configure": { "tool": "Cmake" },
    "build": { "tool": "make" } ,
    "install": { "tool": "make" }
  },
  "cmake":
  {
    "definitions":
    {
      "BAYES++_ROOT": "${build.configure.install_directory}"
    }

  }
},


{
  "name": "MIToolBox",
  "type": "cpp",
  "link":
  {
    "url": "http://www.cs.man.ac.uk/~pococka4/software/MIToolbox.zip"
  },
  "build":
  {
    "configure": { "tool": "Cmake" },
    "build": { "tool": "make" },
    "install": { "tool": "make" }
  },
  "cmake":
  {
    "definitions":
    {
      "MI_ROOT": "${build.configure.install_directory}"
    }
  }
},

{
  "name": "Poco",
  "type": "cpp",
  "link":
  {
    "url": "http://pocoproject.org/releases/poco-1.4.6/poco-1.4.6p3.tar.gz"
  },
  "build":
  {
    "configure": { "tool": "Autotools", "args": ["--prefix=${build.configure.install_directory}"] },
    "build": { "tool": "make" },
    "install": { "tool": "make" }
  },
  "env":
  {
    "POCO_ROOT": "${source_directory}"
  }
},

{
  "name": "GLV",
  "type": "cpp",
  "link":
  {
    "url": "https://github.com/AlloSphere-Research-Group/GLV.git",
    "commit": "dffb906b8f333c737ffa9d2d1a26cdc802aeb895"
  },
  "build":
  {
    "configure": { "tool": "Cmake"},
    "build": { "tool": "make" },
    "install": { "tool": "make" }
  },
  "cmake":
  {
    "definitions":
    {
      "GLV_ROOT": "${build.configure.install_directory}"
    }
  },
  "env":
  {
    "CMAKE_LINK_DIRECTORIES": "${build.configure.install_directory}/lib",
    "CMAKE_INCLUDE_DIRECTORIES": "${build.configure.install_directory}/include"
  }
}

]
