{
    "name": "OpenCV",
    "type": "cpp",
    "link": 
    { 
        "url": "http://downloads.sourceforge.net/project/opencvlibrary/opencv-unix/2.4.8/opencv-2.4.8.zip"
    },
    "build": 
    {
        "configure": { "tool":"Cmake", "args": "-DWITH_CUDA=OFF" },
        "build": { "tool":"make" },
        "install": { "tool":"make" }
    },
    "env":
    {
        "PYTHONPATH": "${build.configure.install_directory}/lib/python2.7/site-packages"
    },
    "cmake":
    {
        "definitions":
        {
            "OpenCV_DIR": "${build.configure.build_directory}"
        }
    }
}

